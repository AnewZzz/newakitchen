{
  "name": "newa-kitchen-backend",
  "version": "1.0.0",
  "description": "Backend for Newa Kitchen App",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && babel src --copy-files --out-dir dist",
    "format": "prettier --write **/*.{js,json,yml,md}",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepare": "husky install",
    "prestart": "yarn build",
    "start:dev": "nodemon --watch .env --watch src --exec babel-node src --source-maps"
  },
  "repository": "git@github.com:binayachaudari/newa-kitchen-backend.git",
  "author": "binayachaudari <binayachaudari@live.com>, rasilbaidar <rasilgrt@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@hapi/boom": "^9.1.4",
    "@hapi/good": "^9.0.1",
    "@hapi/good-console": "^9.0.1",
    "@hapi/hapi": "^20.2.2",
    "@sendgrid/mail": "^8.1.3",
    "axios": "^1.7.7",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.0",
    "hapi-pino": "^9.2.0",
    "inert": "^5.1.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "mongoose": "^6.3.1",
    "node-cron": "^3.0.0",
    "nodemailer": "^6.9.14",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.4.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,yml,json}": [
      "prettier --write"
    ]
  }
}
